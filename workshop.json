{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
        {
            "name": "default",
            "requirements": [
            "sysstat_src"
            ]
        }
    ],
    "requirements": [
        {
            "name": "sysstat_src",
            "type": "source",
            "source_info": {
                "url": "https://github.com/sysstat/sysstat/archive/v12.3.1.tar.gz",
                "filename": "v12.3.1.tar.gz",
                "commands": { 
                    "unpack": "tar -xzf v12.3.1.tar.gz",
                    "get_dir": "tar -tzf v12.3.1.tar.gz | head -n 1",
                    "commands": [
                        "./configure",
                        "make",
                        "make install",
                        "ldconfig",
                        "/usr/local/bin/sar -V"
                    ]
                }
            }
        }
    ]
}
